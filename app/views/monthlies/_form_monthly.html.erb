<%= form_for [@location, @monthly], class: 'form-inline' do |f| %>

	<div class="field form-group col-md-12">
		<%= f.label 'Firstname' %>
		<%= f.text_field :first, class: 'form-control' %>
	</div>

	<div class="field form-group col-md-12">
		<%= f.label 'Lastname' %>
		<%= f.text_field :last, class: 'form-control' %>
	</div>

	<div class="field form-group col-md-12">
		<%= f.label 'Phone Number' %>
		<%= f.text_field :phone, class: 'form-control' %>
	</div>

	<div class="field form-group col-md-12">
		<%= f.label 'Car Make' %>
		<%= f.text_field :make, class: 'form-control' %>
	</div>

	<div class="field form-group col-md-12">
		<%= f.label 'Car Color' %>
		<%= f.text_field :color, class: 'form-control' %>
	</div>

	<div class="field form-group col-md-12">
		<%= f.label 'Ticket Number' %>
		<%= f.text_field :ticket_no, class: 'form-control' %>
	</div>

	<div class="field form-group col-md-12">
		<%= f.label 'Price' %>
		<%= f.number_field :price, class: 'form-control' %>
	</div>

	<div class="field form-group col-md-12">
		<%= f.label 'Paid ?' %>
		<%= f.text_field :paid, class: 'form-control' %>
	</div>

	<%= f.submit class: 'btn btn-lg btn-success btn-block' %>

<% end %>